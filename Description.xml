<?xml version="1.0" ?>
<Description>
	<Resource>
		<!-- 仅有少量种类资源可以在此实例化，例如Color，Transform -->>
		<Color binding="black" r="0" g="0" b="0" a="0"></Color>
		<Color binding="white" r="255" g="255" b="255" a="255"></Color>
		<WEmptyTransform binding="empty"></WEmptyTransform>	
	</Resource>
	<ExWindow miniSize="{600,500}" title="Window - build from XML" size="{800,600}" >
		<!-- 通过 "@" 援引特定binding对象, 通过 "new" 新建对象 -->
		<ExSplitPane binding="menubar" basicSize="{20,20}" color="@black" margin="{0,0,0,0}" adjustAtuo="{true, false}">
		</ExSplitPane>
		<!-- passive指示是否响应绑定数据删减视图组成，默认为no，不响应。意味着只在构建视图时候会单独调用一次builder -->
		<!-- passive设置为yes，表示构图的时候不会单独调用builder,builder的调用完全依照绑定数据的成员 -->
		<ExSplitPane binding="square" color="@white" margin="{2,2,2,2}" passive="yes" >
			<!-- passive为yes时候，需要利用binding明确绑定，不加"@"表示新建可绑定点，加"@"表示同某个已有可绑定点共同变化 -->
			<ExSplitPane passive="no" >
				<!-- passive为no的时候，子视图组数量恒为1 -->
				<ExSplitPane passive = "no" ></ExSplitPane>
				<ExSplitPane passive = "no" ></ExSplitPane>
				<!-- binding为@__binding的时候，隐含视图的数量关联需要上溯，与距其最近的passive为yes的父视图的子视图成员数量关联 -->
				<ExSplitPane binding = "@__binding"  passive="yes" builder="@square"></ExSplitPane>
			</ExSplitPane>
		</ExSplitPane>
	</ExWindow>

</Description>