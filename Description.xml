<?xml version="1.0" ?>
<ExWindow miniSize="{600,500}" title="Window - build from XML" size="{800,600}">
	<Resource>
		<!-- 仅有少量种类资源可以在此实例化，例如Color，Transform -->
		<Color binding="black" r="0" g="0" b="0" a="155"></Color>
		<Color binding="white" r="255" g="255" b="255" a="255"></Color>
		<WEmptyTransform binding="empty"></WEmptyTransform>
	</Resource>
	<!-- 通过 "@" 援引特定binding对象, __binding是一个内建键，用于获取自增视图对应的对象 -->
	<ExSplitPane orientend="h" binding="menubar" basicSize="{20,20}"
		color="@black" margin="{0,0,0,0}" adjustAuto="{true,false}">
	</ExSplitPane>
	<ExSplitPane binding="square" color="@black"
		margin="{2,2,2,2}">
		<!-- 利用binding明确绑定，不加"@"表示新建可绑定点，加"@"表示同某个已有可绑定点共同变化 -->
		<ExSplitPane margin="{2,2,2,2}" color="@black">
			<!-- 未设定绑定点的时候，子视图组数量恒为1 -->
			<ExSplitPane margin="{2,2,2,2}"></ExSplitPane>
			<ExSplitPane margin="{2,2,2,2}"></ExSplitPane>
			<!-- binding为@__binding的时候，隐含视图的数量关联需要上溯 -->
			<ExSplitPane binding="@__binding" builder="@square" margin="{2,2,2,2}"></ExSplitPane>
		</ExSplitPane>
	</ExSplitPane>
</ExWindow>
